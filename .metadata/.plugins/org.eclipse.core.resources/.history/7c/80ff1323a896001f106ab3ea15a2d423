package chapter04;

public class OpEx3
{

	public static void main(String[] args)
	{
		int a = 10;
		int b = 10;
		
		++a;
		b++;
		
		System.out.println(a);
		System.out.println(b);
		
		// 전위연산
		int c = 10;
		int d = ++c;
		
		System.out.println(b);
		
		// 후위연산
		int x = 10;
		int y = x++;
		
		System.out.println(y); // 증가 전
		System.out.println(x); // 증가 후
	}

}
