
public class QuValidateId
{

	public static void main(String[] args)
	{
//		boolean idValidate(String inputId)
//		(idChar>='a' && idChar<='z')
		String str = "kosmo123";
		
		for(int i=0; i<str.length(); i++)
		{
			char ch = str.charAt(i);
			if(ch == 'l')
				break;
			System.out.println(ch);
		}
		
		System.out.println("아이디를 입력하세요 : ");
		
		System.out.println("아이디를 입력하세요 : ");
	}

}
