{

	public static void main(String[] args)
	{
//		int a = 10;
//		int b = 10;
//		
//		++a;
//		b++;
//		
//		System.out.println(a);
//		System.out.println(b);
		
		int a = 10;
		int b = ++a;
		
		System.out.println(b);
		
		int x = 10;
		int y = x++;
		
		System.out.println(y); // 더해지기 전
		System.out.println(x); // 더해진 후
	}

}
