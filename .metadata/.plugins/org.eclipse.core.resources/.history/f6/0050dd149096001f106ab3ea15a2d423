package chapter03;

public class ScopeEx
{ // 클래스 블럭
	int no; // 클래스 블럭 내에서 사용 가능한 변수.
	
	public static void main(String[] args)
	{ // 메인 메서드 블럭
		String name; // 메인 메서드 블럭 내에서 사용 가능한 변수.
	
		if (true) {
			name = "김기동";
			
			String email = "kim@test.com";
		}
		
//		email = "kim@test.com"; // 블럭 밖에서 사용시 에러.
	}

}
