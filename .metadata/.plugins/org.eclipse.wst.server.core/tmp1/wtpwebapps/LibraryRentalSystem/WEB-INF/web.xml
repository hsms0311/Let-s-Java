<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         id="WebApp_ID"
         version="4.0">
    
    <display-name>LibraryRentalSystem</display-name>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.jsp</welcome-file>
        <welcome-file>default.htm</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>BookController</servlet-name>
        <servlet-class>com.library.controller.BookController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookController</servlet-name>
        <url-pattern>/BookController</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>MemberController</servlet-name>
        <servlet-class>com.library.controller.MemberController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MemberController</servlet-name>
        <url-pattern>/MemberController</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RentalController</servlet-name>
        <servlet-class>com.library.controller.RentalController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RentalController</servlet-name>
        <url-pattern>/RentalController</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DBTestServlet</servlet-name>
        <servlet-class>com.library.controller.DBTestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DBTestServlet</servlet-name>
        <url-pattern>/DBTestServlet</url-pattern>
    </servlet-mapping>
    
</web-app>
